
<div style=" margin-left:auto; margin-right: auto; width: 700px; margin-top:10px">
  <h1>Dites nous quelque chose</h1>
  <%= form_with(model: @candy) do |form| %>
  
    <div class="form__group">
      <%= form.label :body, class: "form__label" %>
      <%= form.text_area :body, class: "form__input", rows: "4" %>
    </div>
    
    <div class="form__group">
      <%= select_tag 'scope', options_for_select([['public', 1 ], ['privé', 2 ], ['protégé', 3 ]], 'public_scope'), class: 'form__select-kandy' %>
    </div>
    <style>
      .label_image_upload {
        padding:7px; 
        margin-right: auto; 
        margin-left: auto; 
        /*border:1px dashed lightgray;*/
        display: inline-block; 
        border-radius: var(--border-radius-m);
        cursor: pointer;
        transition: all 500ms;
        &:hover {
          background-color: #f3f3f3;
          transition: all 300ms;
          color: var(--color-primary);
        }
      }
    </style>
    <div class="form__group">
      <% if @candy.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@candy.errors.count, "error") %> prohibited this book from being saved:</h2>

          <ul>
            <% @candy.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <% if @candy.image.present? %>
        <div class="field">
          <%= image_tag @candy.image_url %>
        </div>
      <% end %>
      <%= form.hidden_field :image, value: @candy.cached_image_data, class: "form__input" %>
      <%= form.file_field :image, class: "label_image_upload"%>
<!--      <input class=""  type="file" name="candy[image]" id="candy_image_upload" hidden/>-->
