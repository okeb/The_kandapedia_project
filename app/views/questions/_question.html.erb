<div class="container">
<%= turbo_frame_tag dom_id(question, "edit") do %>
  <div style="width:100%; height:50px"></div>

  <div id="<%= dom_id question %>">
    <p>
      <%= question.title %>
    </p>
  
    <h1><%= link_to question.body, question_path(question) %></h1>

    <%= link_to "Edit this question", edit_question_path(question) %>

  </div>
  <% end %>
</div>
