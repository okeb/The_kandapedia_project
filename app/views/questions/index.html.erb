<p style="color: green"><%= notice %></p>

<h1>Questions</h1>
<div style="height:25px"></div>
<div id="questions">
  <% @questions.desc.each do |question| %>
    <% @question = question %>
     <div style="height:5px"></div>
    <h2>
      <%= link_to question do %>
        <%= @question.title %>
      <% end %>
    </h2>
    <div style="height:20px"></div>
  <% end %>
</div>

<%= button_to "New question", new_question_path, class: "btn btn--primary" %>
