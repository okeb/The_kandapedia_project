<mjml>
  <mj-head>
    <mj-title>Connexion à Kandapedia - Kandapedia</mj-title>
    <mj-font name="DM sans" href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"></mj-font>
