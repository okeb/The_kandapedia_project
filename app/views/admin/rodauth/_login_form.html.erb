<%= form_with url: rodauth(:admin).login_path, method: :post, data: { turbo: false }, class: 'form__container' do |form| %>
  <% if rodauth(:admin).skip_login_field_on_login? %>
    <div class="form-group mb-3">
      <%= form.label "login", rodauth(:admin).login_label, class: "form__label" %>
      <%= form.email_field rodauth(:admin).login_param, value: params[rodauth(:admin).login_param], id: "login", readonly: true, class: "form__input" %>
    </div>
  <% else %>
    <div class="form-group mb-3">
      <%= form.label "login", rodauth(:admin).login_label, class: "form__label" %>
      <%= form.email_field rodauth(:admin).login_param, value: params[rodauth(:admin).login_param], id: "login", autocomplete: "email", required: true, class: "form__input #{"is-invalid" if rodauth(:admin).field_error(rodauth(:admin).login_param)}", aria: ({ invalid: true, describedby: "login_error_message" } if rodauth(:admin).field_error(rodauth(:admin).login_param)) %>
      <%= content_tag(:span, rodauth(:admin).field_error(rodauth(:admin).login_param), class: "invalid-feedback", id: "login_error_message") if rodauth(:admin).field_error(rodauth(:admin).login_param) %>
    </div>
  <% end %>

  <% unless rodauth(:admin).skip_password_field_on_login? %>
    <div class="form-group mb-3">
      <%= form.label "password", rodauth(:admin).password_label, class: "form__label" %>
      <%= form.password_field rodauth(:admin).password_param, value: "", id: "password", autocomplete: rodauth(:admin).password_field_autocomplete_value, required: true, class: "form__input #{"is-invalid" if rodauth(:admin).field_error(rodauth(:admin).password_param)}", aria: ({ invalid: true, describedby: "password_error_message" } if rodauth(:admin).field_error(rodauth(:admin).password_param)) %>
      <%= content_tag(:span, rodauth(:admin).field_error(rodauth(:admin).password_param), class: "invalid-feedback", id: "password_error_message") if rodauth(:admin).field_error(rodauth(:admin).password_param) %>
    </div>
  <% end %>

  <div class="btn__box">
    <%= form.submit rodauth(:admin).login_button, class: "btn btn__primary" %>
  </div>
<% end %>
